<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.timi" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Timi</name>
    <description>
        Timi helps you find friends who are available right now
    </description>
    <author email="ray.xiao92@gmail.com" href="http://gettimi.com">
        RaynJiaming
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
      <feature name="StatusBar">
            <param name="ios-package" value="CDVStatusBar" onload="true" />
        </feature>    
    <feature name="Camera">
        <param name="ios-package" value="CDVCamera" />
    </feature>      
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />
    <preference name="StatusBarBackgroundColor" value="#ffffff" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="DisallowOverscroll" value="true" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <access origin="mailto:*" launch-external="yes"/>
    <access origin="sms:*" launch-external="yes"/>
    <allow-navigation href="sms:*" />
    <allow-intent href="sms:*" />
     <icon src="res/ios/icon.png" platform="ios" width="57" height="57" density="mdpi" />
     
</widget>
